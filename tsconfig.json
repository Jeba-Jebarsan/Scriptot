{
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": [
      "vite/client",
      "@types/dom-speech-recognition"
    ],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "ESNext",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },
    // vite takes care of building everything, not tsc
    "noEmit": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx",
    ".next/types/**/*.ts"
, "../app/lib/persistence/neondb.ts", "../app/components/auth/Login.tsx", "../app/components/auth/LogoutButton.tsx", "../app/routes/sign-up.tsx", "../app/routes/sign-in.tsx"  ],
  "exclude": ["node_modules"]
}
